{
  "name": "Pulumi Go Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/go:1.20",
  "postCreateCommand": "go mod tidy && go install github.com/pulumi/pulumi/sdk/v3/go/pulumi@latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "pulumi.pulumi"
      ]
    }
  }
}
